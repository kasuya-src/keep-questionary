{
  "firestore": {
    "database": "(default)",
    "location": "asia-northeast2",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "source": ".",
    "headers": [
      {
        "source": "**/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, s-maxage=604800"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|webp|css|js|svg|mp3)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=604800, s-maxage=604800"
          }
        ]
      }
    ],
    "rewrites": [
    {
      "source": "**",
      "destination": "/index.html"
    }
  ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "asia-east1"
    }
  }
}
